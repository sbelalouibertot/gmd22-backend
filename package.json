{
  "name": "gmd22-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "commit": "cz",
    "start": "dotenv -- nodemon -e ts,graphql -x ts-node src/index.ts",
    "debug": "dotenv -- nodemon -e ts,graphql -x ts-node --inspect src/index.ts",
    "build": "rm -rf dist  && rimraf dist && tsc -p tsconfig.prod.json && copyfiles --up 1 'src/**/*.{graphql,json,pdf}' dist",
    "migrate-dev": "prisma migrate dev --create-only",
    "migrate-deploy": "prisma migrate deploy",
    "generate": "prisma generate",
    "test": "npm run test:unit",
    "test:unit": "jest --config .jest.unit.js",
    "test:integration": "dotenv -- jest --config .jest.integration.js",
    "deploy": "envsub --env-file .env deploy.sh deploy-out.sh --syntax dollar-basic; bash ./deploy-out.sh; rm ./deploy-out.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sbelalouibertot/gmd22-backend.git"
  },
  "keywords": [],
  "author": "Samy Belaloui-Bertot",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sbelalouibertot/gmd22-backend/issues"
  },
  "homepage": "https://github.com/sbelalouibertot/gmd22-backend#readme",
  "devDependencies": {
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.25",
    "commitizen": "^4.2.4",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-cli": "1.4.0",
    "envsub": "^4.0.7",
    "graphql-iso-date": "^3.6.1",
    "graphql-type-json": "^0.3.2",
    "jest": "^28.1.1",
    "nodemon": "1.19.4",
    "pg": "^8.7.3",
    "prisma": "^3.12.0",
    "rimraf": "2.7.1",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.5.3",
    "@graphql-tools/merge": "^8.2.9",
    "@graphql-tools/schema": "^8.3.9",
    "@prisma/client": "^3.14.0",
    "apollo-server": "^3.6.7",
    "apollo-server-core": "^3.6.7",
    "graphql": "^16.5.0",
    "graphql-yoga": "1.18.3"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
