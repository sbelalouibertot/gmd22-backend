{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["dom", "ES2020"],
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": "./src",
    "rootDir": "./src",
    "sourceMap": true,
    "noUncheckedIndexedAccess": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "incremental": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "typeRoots": ["./src/types/", "node_modules/@types/"]
  },
  "exclude": ["node_modules", "coverage", ".vscode", "dist", "_test.ts"],
  "include": ["src/**/*", "src/bin"]
}
